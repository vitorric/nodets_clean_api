{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "target": "es2019",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "resolveJsonModule": true,
      "incremental": true,
      "esModuleInterop": true,
      "paths": {
        "@core/*": ["./src/core/*"],
        "@application/*": ["src/application/*"],
        "@domain/*": ["./src/domain/*"],
        "@infra/*": ["./src/infra/*"]
      }
    }
  }
  